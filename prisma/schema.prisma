generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model emp {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  age       Int      @default(0)
  phoneNo   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  article   post[]
}

model post {
  id       Int    @id @default(autoincrement())
  pname    String
  author   emp    @relation(fields: [authorId], references: [id])
  authorId Int
}

model product {
  id    Int    @id @default(autoincrement())
  pName String
  price Int
}
